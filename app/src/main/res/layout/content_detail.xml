<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.raitom.sqlitecrud.ui.DetailActivity"
    tools:showIn="@layout/activity_detail">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:padding="5dp"
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/Blue"
                android:text="EDITAR CLIENTE"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_below="@+id/image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/nameEditTxt"
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="15dp"
                android:hint="Name"
                android:textAppearance="?android:attr/textAppearanceLarge"

                android:layout_below="@+id/profile" />
            <EditText
                android:id="@+id/apellidoET"
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="15dp"
                android:hint="Apellidos"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_below="@+id/nameTxt" />
            <EditText
                android:id="@+id/dniET"
                android:layout_width="221dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="15dp"
                android:hint="DNI"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_below="@+id/profile" />
            <EditText
                android:id="@+id/direccionET"
                android:layout_width="219dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="15dp"
                android:hint="Dirección"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_below="@+id/profile" />
            <EditText
                android:id="@+id/telefonoET"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="15dp"
                android:hint="Telefono"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_below="@+id/profile" />


            <EditText
                android:id="@+id/dirtrabajoET"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="15dp"
                android:hint="trabajo"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_below="@+id/profile" />

            <EditText
                android:id="@+id/ocupacionET"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="15dp"
                android:hint="Ocupación"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_below="@+id/profile" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="left|end"
                android:orientation="horizontal"
                android:id="@+id/linear1"
                android:padding="8dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:height="48dp"
                    android:clickable="true"
                    android:padding="5dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Actualizar"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/updateBtn" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:height="48dp"
                    android:clickable="true"
                    android:padding="5dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Borrar"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/deleteBtn" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>